<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/btn_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_toast" android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:background="@color/colorPrimary"
            android:textColor="@android:color/white" android:onClick="showToast"/>
    <TextView
            android:text="@string/txt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txt_count" android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:textSize="100sp"
            android:layout_below="@+id/btn_toast"
            android:textColor="@color/colorPrimary" android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginBottom="16dp"/>
    <Button
            android:text="@string/btn_count"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/btn_count" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:layout_below="@+id/txt_count"
            android:background="@color/colorPrimary" android:textColor="@android:color/white" android:onClick="count"
            android:layout_marginBottom="16dp"/>
</RelativeLayout>